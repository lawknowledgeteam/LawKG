<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyang.lawknowledge.lawknowledge..mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.liyang.lawknowledge.lawknowledge.entity.User">
        <result column="UserID" jdbcType="INTEGER" property="userID" />
        <result column="LoginName" jdbcType="VARCHAR" property="loginName"/>
        <result column="PassWord" jdbcType="VARCHAR" property="passWord"/>
    </resultMap>

    <select id="sel" resultType="com.liyang.lawknowledge.lawknowledge.entity.User" >
        select * from tb_user where UserID = #{userID}
    </select>

    <select id="login" resultType="com.liyang.lawknowledge.lawknowledge.entity.User" >
        SELECT * FROM tb_user where LoginName = #{loginName} and PassWord = #{passWord}
    </select>

    <update id="loginTime" >
         UPDATE tb_user set LastLoginTime = #{lastLoginTime} WHERE LoginName = #{loginName}
    </update>

    <select id="isRepeat" resultType="com.liyang.lawknowledge.lawknowledge.entity.User" >
        SELECT * FROM tb_user where LoginName = #{loginName}
    </select>

    <insert id="register" parameterType="com.liyang.lawknowledge.lawknowledge.entity.User">
        INSERT INTO tb_user (LoginName, PassWord,Sex,RegisterTime) VALUES (#{loginName}, #{passWord},#{sex},#{registerTime})
    </insert>

    <update id="changePSW"  parameterType="com.liyang.lawknowledge.lawknowledge.entity.User">
        UPDATE tb_user  SET PassWord = #{newPassWord} WHERE `UserID` = #{userID} and PassWord = #{passWord}
    </update>
    <update id="changeInfo" parameterType="com.liyang.lawknowledge.lawknowledge.entity.User">
        UPDATE tb_user  SET NickName = #{nickName},HeadUrl = #{headUrl},Sex = #{sex} WHERE `UserID` = #{userID}
    </update>
    <select id="getInfo" resultType="com.liyang.lawknowledge.lawknowledge.entity.User" >
        select * from tb_user where UserID = #{userID}
    </select>

    <select id="getList" resultType="com.liyang.lawknowledge.lawknowledge.entity.User">
       select * from tb_user limit #{start},#{num}
    </select>

    <select id="getCount" resultType ="java.lang.Integer">
        select COUNT(*) from tb_user
    </select>

</mapper>
